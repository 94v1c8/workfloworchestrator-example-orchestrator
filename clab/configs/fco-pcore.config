# GRT Config

# Loopback
set / interface lo1 subinterface 0 admin-state enable
set / interface lo1 subinterface 0 ipv4 address 192.0.2.1/32
set / interface lo1 subinterface 0 ipv6 address 2001:db8::1/128
set / interface lo1 subinterface 0 ipv4 admin-state enable
set / interface lo1 subinterface 0 ipv6 admin-state enable
set / network-instance default interface lo1.0

# Interface to AMS-PCORE E1-2
set network-instance default interface ethernet-1/1.2000
set / interface ethernet-1/1 admin-state enable
set / interface ethernet-1/1 vlan-tagging true
set / interface ethernet-1/1 subinterface 2000 ipv4 address 198.51.100.3/31
set / interface ethernet-1/1 subinterface 2000 ipv6 address 2001:db8:1::2000:1/127
set / interface ethernet-1/1 subinterface 2000 ipv4 admin-state enable
set / interface ethernet-1/1 subinterface 2000 ipv6 admin-state enable
set / interface ethernet-1/1 subinterface 2000 vlan encap single-tagged vlan-id 2000
set / interface ethernet-1/1 subinterface 2000 ip-mtu 9000
set / interface ethernet-1/1 subinterface 2000 admin-state enable

# Interface to LHR-PCORE E1-1
set network-instance default interface ethernet-1/2.2000
set / interface ethernet-1/2 admin-state enable
set / interface ethernet-1/2 vlan-tagging true
set / interface ethernet-1/2 subinterface 2000 ipv4 address 198.51.100.4/31
set / interface ethernet-1/2 subinterface 2000 ipv6 address 2001:db8:2::2000:0/127
set / interface ethernet-1/2 subinterface 2000 ipv4 admin-state enable
set / interface ethernet-1/2 subinterface 2000 ipv6 admin-state enable
set / interface ethernet-1/2 subinterface 2000 vlan encap single-tagged vlan-id 2000
set / interface ethernet-1/2 subinterface 2000 ip-mtu 9000
set / interface ethernet-1/2 subinterface 2000 admin-state enable

# IS-IS Config
set / network-instance default protocols isis
set / network-instance default protocols isis instance default
set / network-instance default protocols isis instance default admin-state enable
set / network-instance default protocols isis instance default net [ 49.0001.0000.0000.0002.00 ]
set / network-instance default protocols isis instance default ipv4-unicast
set / network-instance default protocols isis instance default ipv4-unicast admin-state enable
set / network-instance default protocols isis instance default ipv6-unicast
set / network-instance default protocols isis instance default ipv6-unicast admin-state enable
set / network-instance default protocols isis instance default interface ethernet-1/1.2000
set / network-instance default protocols isis instance default interface ethernet-1/1.2000 admin-state enable
set / network-instance default protocols isis instance default interface ethernet-1/2.2000
set / network-instance default protocols isis instance default interface ethernet-1/2.2000 admin-state enable
set / network-instance default protocols isis instance default interface lo1.0
set / network-instance default protocols isis instance default interface lo1.0 admin-state enable
set / network-instance default protocols isis instance default level 2
set / network-instance default protocols isis instance default level 2 metric-style wide
